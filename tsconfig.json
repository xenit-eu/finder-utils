{
    "compilerOptions": {
        "outDir": "./dist",
        // Emit options
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        // Compile options
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "importsNotUsedAsValues": "error",
        "stripInternal": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
    },
    "include": [
        "src"
    ]
}
