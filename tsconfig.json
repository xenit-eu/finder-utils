{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "preserveConstEnums": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ]
}
